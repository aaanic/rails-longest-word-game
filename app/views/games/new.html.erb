<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<ul class="letter-cards"> <%@letters.each do |letter| %>
  <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<p>Waht is the longest word you can find?</p>

<form class="answer-form" action="/score" method="post">
   <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
   <%= hidden_field_tag "word" %>
   <%= hidden_field_tag "letters", value: @letters %>
  <input id="word" name="word" type="text">
  <input type="submit" value="Check your score">
</form>
